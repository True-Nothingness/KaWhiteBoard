<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OptionsFragment"
    tools:ignore="HardcodedText"
    android:background="@color/dark">

    <TextView
        android:id="@+id/boardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/whiteboardName"
        android:textSize="28sp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/kobocolour"
        android:fontFamily="@font/caesar"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:src="@drawable/arrow_back_fill0_wght400_grad0_opsz48"
        app:tint="@color/kobocolour"
        android:contentDescription="Back"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"/>

    <GridLayout
        android:id="@+id/options_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:padding="20dp"
        android:layout_marginTop="180dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/itemButton1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Invite new members"
                android:src="@drawable/forward_to_inbox_fill0_wght400_grad0_opsz48"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/kobocolour"/>

            <TextView
                android:id="@+id/itemLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite new members"
                android:textColor="@color/pink"
                app:layout_constraintStart_toEndOf="@+id/itemButton1"
                app:layout_constraintTop_toTopOf="@+id/itemContainer1"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/itemButton2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Invite new members"
                android:src="@drawable/groups_fill0_wght400_grad0_opsz48"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/kobocolour"/>

            <TextView
                android:id="@+id/itemLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage members"
                android:textColor="@color/pink"
                app:layout_constraintStart_toEndOf="@+id/itemButton2"
                app:layout_constraintTop_toTopOf="@+id/itemContainer2"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemContainer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageButton
                android:id="@+id/itemButton3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Invite new members"
                android:src="@drawable/delete_forever_fill0_wght400_grad0_opsz48"
                android:textColor="@color/pink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/kobocolour"/>

            <TextView
                android:id="@+id/itemLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete board"
                android:textColor="@color/pink"
                app:layout_constraintStart_toEndOf="@+id/itemButton3"
                app:layout_constraintTop_toTopOf="@+id/itemContainer3"
                android:layout_marginTop="13dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </GridLayout>

</FrameLayout>